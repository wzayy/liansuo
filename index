            background-image: radial-gradient(#f7e0b2, #eb5);
            border-radius: 100%;
            overflow: hidden;
            margin: 0;
            align-self: center;
            flex: 0 0 auto;
            border: solid 2px #ecb23e;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
        }

        .boi,
        .boi * {
            position: absolute;
        }

        .boi::before {
            content: '';
            display: block;
            width: 100%;
            height: 100%;
